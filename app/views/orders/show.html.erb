<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

 <h4>Thank you for your order, <%= @order.user.full_name %> <br/><h4>An email has been sent to <%= @order.user.email %></h4>
 <br/><h3>Below are your order details</h3>

  <div class="panel panel-default items">
    <table class="table table-bordered">

      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>

      <tbody>
      <% @cart_total = 0 %>
      <% line_items = LineItem.where(order_id: @order.id) %>
      <% line_items.each do |line_item| %>
        <%= render 'item', line_item: line_item, product_id: line_item.product_id, line_total: line_item.total_price %>
      <% @cart_total += line_item.total_price%>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @cart_total %>
          </th>
        </tr>
      </tfoot>
    </table>

</section>
