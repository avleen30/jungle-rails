<br/><br/> <% if @average.to_i == 0 %>           <h4>This product has not been
rated yet.</h4>           <% else %>           <h4><dt>Product Rating</dt>
<dd><%= @average.to_i %> out of 5</dd></h4>           <% end %>

<% if current_user %>
  <h2>Leave a Review:</h2>
  <%= form_for :review, url: "#{@product.id}/reviews" do |f| %>
    <textarea class="form-control" rows="3" <%= f.text_area :description %><br/></textarea>
  <div class="dropdown">
    <%= f.select :rating, [1, 2, 3, 4, 5] %><br/><br/>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default"<%= f.submit "Submit" %>Sumbit Review</button>
    </div>
  </div>
  <% end %>
<% end %>