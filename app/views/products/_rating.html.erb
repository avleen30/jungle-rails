<div class="col-sm-8">
  <div class="well">
    <dl class="dl-horizontal">
      <h4>Product Rating: <%= rating %> out of 5<br/></h4>
      Created by <strong><%= user %></strong> about <%= time_ago_in_words(created_at) %> ago <br/><br/>
      <h5><%= description %></h5>
      <% if current_user.id == user_id %>
      <%= link_to 'Delete Review', class: 'btn btn-xs btn-danger delete-review', url: review_path(review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} %>
        <% end %>
      </li>
    </dl>
  </div>
</div>